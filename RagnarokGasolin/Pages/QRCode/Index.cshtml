@page "{id:int?}"
@model RagnarokGasolin.Pages.QRCode.IndexModel
@{
    ViewData["Title"] = "QR Code";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">QR Code Scanner</h2>
                </div>
                <div class="card-body">
                    @if (Model.ExhibitItem != null)
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ExhibitItem.ImageUrl" alt="@Model.ExhibitItem.Name"
                                class="img-fluid rounded mb-3" style="max-height: 300px;">
                            <h3>@Model.ExhibitItem.Name</h3>
                        </div>

                        <div class="exhibit-details">
                            <p class="lead">@Model.ExhibitItem.Description</p>

                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <h5>Detaljer</h5>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>Type:</strong> @Model.ExhibitItem.Type</li>
                                        <li class="list-group-item"><strong>Placering:</strong> @Model.ExhibitItem.Location
                                        </li>
                                        <li class="list-group-item"><strong>Oprindelig ejer:</strong>
                                            @Model.ExhibitItem.OriginalOwner</li>
                                        <li class="list-group-item"><strong>Erhvervet:</strong>
                                            @Model.ExhibitItem.GetFormattedAcquisitionDate()</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h5>Historisk kontekst</h5>
                                    <p>@Model.ExhibitItem.HistoricalContext</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-qr-code-scan" style="font-size: 5rem; color: #6c757d;"></i>
                            <h3 class="mt-3">Scan en QR-kode</h3>
                            <p class="lead">Brug din telefon til at scanne en QR-kode ved en udstillingsgenstand for at se
                                mere information.</p>
                            <p>Eller bes√∏g <a asp-page="/QRCode/Generate">QR-kode generatoren</a> for at lave dine egne
                                QR-koder.</p>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="/Exhibition" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Tilbage til udstillingen
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .exhibit-details {
            max-width: 800px;
            margin: 0 auto;
        }
    </style>
}